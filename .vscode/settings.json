{
    "files.exclude": {
        // LaTeX intermediate and temporary files
        "*.aux": true,
        "*.abs": true,
        "*.bbl": true,
        "*.blg": true,
        "*.idx": true,
        "*.ind": true,
        "*.lof": true,
        "*.lot": true,
        "*.out": true,
        "*.toc": true,
        "*.acn": true,
        "*.acr": true,
        "*.alg": true,
        "*.glg": true,
        "*.glo": true,
        "*.gls": true,
        "*.fls": true,
        "*.log": true,
        "*.fdb_latexmk": true,
        "*.synctex.gz": true,
        "*.run.xml": true,
        // LaTeX intermediate directories
        "_build/": true,
        "latex.out/": true,
        "latex.cache/": true,
        // Other temporary files
        "*.tmp": true,
        "*.bak": true,
        // Editor backup files
        "*~": true,
        "*.swp": true,
        "*.swo": true,
        "*.sublime-project": true,
        "*.sublime-workspace": true,
        // DS_Store for macOS
        ".DS_Store": true,
        // Auxiliary TeXShop files
        "*.pdfsync": true,
        "*.xmpi": true,
        "*.xmpdata": true
    }
}